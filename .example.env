PORT=5000
MONGO_URI=mongodb://localhost:27017/AndrewAI
JWT_SECRET=your_jwt_secret_key
OPENAI_API_KEY=your_openai_api_key

# For nodemailer

# -------------------------------
# Email Settings
# -------------------------------
EMAIL_FROM_NAME=Your App Name  # e.g., Andrew AI Assistant
EMAIL_FROM_ADDRESS=your_email@example.com  # Sender's email address

# -------------------------------
#  SMTP Server Settings
# -------------------------------
SMTP_HOST=smtp.gmail.com  # SMTP host (e.g., Gmail)
SMTP_PORT=587  # Use 587 for TLS, 465 for SSL
SMTP_USER=your_email@example.com  # Full email address as username
SMTP_PASS=your_app_password  # App password generated from Google account

# -------------------------------
# OTP Settings
# -------------------------------
OTP_EXPIRATION_MINUTES=10  # OTP expiration time in minutes

# -------------------------------
# ⚠️ Notes:
# 1. Use your actual email address and App Password here.
# 2. Make sure to keep this file secret and never commit it to source control.
# 3. For Gmail, generate an App Password if 2FA is enabled.
# -------------------------------
